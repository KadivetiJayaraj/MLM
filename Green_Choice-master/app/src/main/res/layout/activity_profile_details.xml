<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".ProfileDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_black"
            android:id="@+id/back"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="Title"
            android:layout_centerInParent="true"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_10sdp">

            <!--            Linear1-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linear1"
                    android:visibility="gone">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background"
                        android:padding="@dimen/_12sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/name"
                        android:hint="Name"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background"
                        android:padding="@dimen/_12sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/profile_id"
                        android:hint="Profile Id"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background"
                        android:padding="@dimen/_12sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/email"
                        android:hint="Email"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background"
                        android:padding="@dimen/_12sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/ph_no"
                        android:hint="Phone Number"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background"
                        android:padding="@dimen/_12sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/address"
                        android:hint="Address"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background"
                        android:padding="@dimen/_12sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/city"
                        android:hint="City"/>
                </LinearLayout>

            <!--            Linear2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear2"
                android:visibility="gone">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/acc_no"
                    android:hint="Account Number"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/bank_name"
                    android:hint="Bank Name"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/bank_address"
                    android:hint="Bank Address"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/ifsc"
                    android:hint="IFSC Code"/>
            </LinearLayout>

            <!--            Linear3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear3"
                android:visibility="gone">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/role"
                    android:hint="Role"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/date_of_joining"
                    android:hint="Date Of Joining"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/levels_completed"
                    android:hint="Levels Completed"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/trans_id"
                    android:hint="Transaction Id"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/total_members"
                    android:hint="Total Members"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/total_units"
                    android:hint="Total Units"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/leg"
                    android:hint="leg"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/left_leg_members"
                    android:hint="Left Leg Members"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/left_units"
                    android:hint="Left Units"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/right_leg_members"
                    android:hint="Right Leg Members"/>
                <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:padding="@dimen/_12sdp"
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/right_units"
                android:hint="Right Units"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/parent_id"
                    android:hint="Parent Id"/>


            </LinearLayout>

        </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>